		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>INIT_PARAM</param-name>
		<param-value>web.xml에 저장한 초기화 매개변수</param-value>
	</context-param>


	<!-- 데이터 접속 정보를 컨텍스트 초기화 파라미터로 등록 -->
	<context-param>
		<param-name>MariaDriver</param-name>
		<param-value>org.mariadb.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>MariaURL</param-name>
		<param-value>jdbc:mariadb://localhost:3306/project1</param-value>
	</context-param>
	<context-param>
		<param-name>MariaId</param-name>
		<param-value>2ho0</param-value>
	</context-param>
	<context-param>
		<param-name>MariaPwd</param-name>
		<param-value>1234</param-value>
	</context-param>

	<filter>
		<filter-name>SetCharEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SetCharEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>POSTS_PER_PAGE</param-name>
		<param-value>10</param-value>
	</context-param>
	<!-- 한 블럭당 출력할 번호의 갯수 -->
	<context-param>
		<param-name>PAGES_PER_BLOCK</param-name>
		<param-value>5</param-value>
	</context-param>
	
		<!-- 파일 업로드 제한용량 : 10메가 -->
	<context-param>
		<param-name>maxPostSize</param-name>
		<param-value>10240000</param-value>
	</context-param>
	
